FROM python:3.11-slim

ARG DAGSTER_VERSION=1.9.11

# All packages are hard-pinned to `dagster`, so setting the version on just `DAGSTER` will ensure
# compatible versions.
RUN pip install \
    dagster==${DAGSTER_VERSION} \
    dagster-k8s \
    dagster-postgres \
    dagster-celery[flower,redis,kubernetes] \
    dagster-celery-k8s \
    dagster-graphql \
    dagster-webserver
